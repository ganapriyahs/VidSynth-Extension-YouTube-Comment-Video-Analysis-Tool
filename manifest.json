{
  "manifest_version": 3,
  "name": "VidSynth",
  "version": "2.3",
  "description": "Professional AI analysis pipeline for YouTube content.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "sidePanel",
    "alarms" 
  ],
  "host_permissions": [
    "https://*.run.app/*",
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Analyst Panel",
    "default_icon": "icon.png"
  },
  "side_panel": {
    "default_path": "side_panel.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}